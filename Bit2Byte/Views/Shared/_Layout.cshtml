<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/> 
    <title>@ViewData["Title"] | Bit2Byte</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Bit2Byte.styles.css" asp-append-version="true" />


    <style>
        .navbar-underline:hover{
            text-decoration-line: underline;
            text-decoration-style: solid;
            background: #89CFF0;
            border-radius:5px;
            margin-left: 10px;
            color: #000;
            transform: scale(1.1);

        }

        
</style>


</head>








<body class="py">

    
    <div class="container">

    <header>    

        <nav class="container justfiy-content-center navbar navbar-expand-lg navbar-light bg-light align-content-center py-3 px-5">
            <a class="navbar-brand" href="/">

                <img src="~/images/logo.jpg" alt="logo" width="50" height="50"  asp-append-version="true" />
                Bit2Byte
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse mb-3" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="navbar-underline nav-item nav-link" href="/">Home</a>
                    <a class="navbar-underline nav-item nav-link" href="/Home/Events">Events</a>
                    <a class="navbar-underline nav-item nav-link" href="/Book/GetAllBooks">Achievements</a>
                    <a class="navbar-underline nav-item nav-link" asp-controller="Book" asp-action="AddnewAchievement">Add New Achieve</a>
                    <a class="navbar-underline nav-item nav-link" href="/Home/Contact">Contact</a>
                  


                </div>
            </div>

            <form class="form-inline mb-3">
                        <button class="btn btn-outline-success mr-sm-2 my-1" type="button">Sign Up</button>
                        <button class="btn btn-outline-success my-2 my-sm-0" type="button">Log In</button>
                    </form>
        </nav>

    </header>

    </div>

    <main role="main" class="pb-3" >
        @RenderBody()
    </main>

    <partial name="_footer" />


    <environment include="Development">

            <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
            <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
            <script src="~/lib/jquery/dist/jquery.js"></script>
            <script src="~/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.js"></script>

        </environment>






         <environment exclude="Development">

            <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
            <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
            <script src="~/lib/jquery/dist/jquery.min.js"></script>
            <script src="~/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>

        </environment>



        <footer>

            <div class="border-top footer text-muted text-center">
                <div class="container">
                    Copyright &copy; Bit2Byte @DateTime.Now.Year
                    
                    <custom-email my-email="asifsaad730@gmail.com"></custom-email>
                </div>
            </div>
        </footer>


     

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

        @await RenderSectionAsync("Scripts", required: false)

      
</body>

</html>
